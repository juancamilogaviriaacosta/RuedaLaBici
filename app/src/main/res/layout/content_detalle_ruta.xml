<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_detalle_ruta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="rueda.bici.DetalleRutaActivity"
    tools:showIn="@layout/activity_detalle_ruta">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/biker_profile"
                android:id="@+id/imagenDetalleRuta" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nombreDetalleRuta"
                    android:textStyle="bold" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fechaDetalleRuta" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/organizadorDetalleRuta" />
            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="fill_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/descripcionDetalleRuta" />

            <android.support.v4.widget.Space
                android:layout_width="fill_parent"
                android:layout_height="15dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Duracion: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lable1"
                    android:textStyle="bold"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/duracionDetalleRuta" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Punto de encuentro: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lable2"
                    android:textStyle="bold"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/puntoEncuentroDetalleRuta" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Destino: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lable3"
                    android:textStyle="bold"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/destinoDetalleRuta" />
            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="fill_parent"
                android:layout_height="15dp" />

            <Button
                android:text="Contactar al organizador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contactarOrganizador"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorLetra"/>

            <android.support.v4.widget.Space
                android:layout_width="fill_parent"
                android:layout_height="15dp" />

            <Button
                android:text="Invitar a un amigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/invitarAmigo"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorLetra"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
